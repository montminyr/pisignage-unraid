                .radio-inline
                    label
                        input(type='radio',value='top',name="top",ng-model='group.selectedGroup.emergencyMessage.vPos')
                        small() Top
                .radio-inline
                    label
                        input(type='radio',value='middle',name="vmiddle",ng-model='group.selectedGroup.emergencyMessage.vPos')
                        small() Middle
                .radio-inline
                    label
                        input(type='radio',value='bottom',name="bottom",ng-model='group.selectedGroup.emergencyMessage.vPos')
                        small() Bottom

        .form-group.row(ng-show='group.selectedGroup.emergencyMessage.enable')
            label.control-label.text-muted.col-sm-3.text-right() Message
            .col-sm-9
                input.form-control( name='ticker_messages',rows=5,
                ng-model='group.selectedGroup.emergencyMessage.msg',placeholder="Enter the message to be displayed")

.modal-footer
