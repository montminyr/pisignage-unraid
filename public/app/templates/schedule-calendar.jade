.modal-header
    h4.text-primary  Set Timings for Scheduled Playlist ({{forPlaylist.name}})
.modal-body
    form(role='form', name='schedulecal')
        .panel.panel-info
            .panel-heading
                h4
                    strong Duration
                    small &nbsp;&nbsp;Schedule between two Dates(both inclusive)
            .panel-body
                .form-group
                    .col-xs-2
                        .checkbox
                            label
                                input(type="checkbox",ng-model="forPlaylist.settings.durationEnable")
                                small(ng-show='!forPlaylist.settings.durationEnable') Schedule
                                small(ng-show='forPlaylist.settings.durationEnable') Begin
                    .col-xs-5
                        input.form-control.input-sm(type='date', ng-model='forPlaylist.settings.startdate',
                        ng-model-options="{timezone:'UTC'}",
                        ng-show='forPlaylist.settings.durationEnable',
                        placeholder="Starting on",
                        name='startdate', title='Enter Start Date')
                    .col-xs-1
                        small(ng-show='forPlaylist.settings.durationEnable') till
                    .col-xs-4
                        input.form-control.input-sm(type='date', ng-model='forPlaylist.settings.enddate',
                        ng-model-options="{timezone:'UTC'}",
                        ng-show='forPlaylist.settings.durationEnable',
                        placeholder="Till date",
                        name='enddate', title='Enter End Date')
