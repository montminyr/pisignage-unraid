        .panel.panel-info
            .panel-heading
                h4
                    strong Only on Selected Days
                    small &nbsp;&nbsp;Schedule on specific week days or month days (needs 1.7.0 for multiple days, previous versions take the first day only)
            .panel-body
                .form-group
                    .col-xs-2
                        label.control-label Week Day(s)
                    .col-xs-4
                        //select.form-control(ng-model='forPlaylist.settings.weekdays',
                        //                    ng-options='weeklist.indexOf(weekday) as weekday for weekday in weeklist',
                        //                    title='Select playing week days ')
                        div.pull-right( ng-dropdown-multiselect="",
                        options="ngDropdown.weekdays.list",
                        selected-model="ngDropdown.weekdays.selectedDays",
                        events = "ngDropdown.weekdays.events",
                        translation-texts="ngDropdown.weekdays.customTexts",
                        extra-settings="ngDropdown.weekdays.extraSettings",checkboxes="true")

                    .col-xs-2
                        label.control-label Day(s) of Month
                    .col-xs-4
                        //select.form-control(ng-model='forPlaylist.settings.monthdays',
                        //                        ng-options="dayslist.indexOf(day) as day for day in dayslist",
                        //                        title='Enter playing dates ')
                        div.pull-right( ng-dropdown-multiselect="",
                        options="ngDropdown.monthdays.list",
                        selected-model="ngDropdown.monthdays.selectedDays",
                        events = "ngDropdown.monthdays.events",
                        translation-texts="ngDropdown.monthdays.customTexts",
                        extra-settings="ngDropdown.monthdays.extraSettings",checkboxes="true")
        .panel.panel-info
            .panel-heading
                h4
                    strong At Specified Time
                    small &nbsp;&nbsp;Only at specific time of the day (for e.g. 7AM - 11AM)
            .panel-body
                .form-group
                    .col-xs-2
                        .checkbox
                            label
                                input(type="checkbox",ng-model="forPlaylist.settings.timeEnable")
                                small(ng-show='!forPlaylist.settings.timeEnable') Schedule
                                small(ng-show='forPlaylist.settings.timeEnable') Begin
                    .col-xs-5
                        input.form-control(type='time',
                                            ng-show='forPlaylist.settings.timeEnable',
                                            ng-model='forPlaylist.settings.starttimeObj',
                                            name='starttime', title='Enter Start Time')
                    .col-xs-1
                        small(ng-show='forPlaylist.settings.timeEnable') till
                    .col-xs-4
                        input.form-control(type='time',
                                                ng-show='forPlaylist.settings.timeEnable',
                                                ng-model='forPlaylist.settings.endtimeObj',
                                                name='endtime', title='Enter End Time')

